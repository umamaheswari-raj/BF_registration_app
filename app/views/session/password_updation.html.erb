<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous"> 
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
  </head>
  <body data-turbolinks="false">
      <div class="mx-auto mt-5 card">
        <div class="logo">
          <h2>ByteForza</h2>
          <br>
        </div>
        <br>
        <div class="info" >Enter your new password and click submit</div>
          <div class="password_updation_form">
            <%= form_for(:user, :url => {:controller => 'users', :action => 'update_new_password'}) do |form| %>
              <div class="form-group">
                <%= form.password_field :password, required: true, class: "form-control", id: "user-password", placeholder: "New password",autofocus: true %>  
              </div>
              <%= form.hidden_field :user_id, :value => @user.id %>
              <div class="form-group">
                <%= form.password_field :password_confirmation, required: true, class: "form-control", id:"user-confirm-password", placeholder: "Confirm Password"%>
              </div>
              <div  class='actions'>
                <%= submit_tag "Submit",class: "btn btn-success col pswd-submit" %>
              </div>
            <% end %>
        </div>
      </div>
  </body>
</html>
    
<script type="text/javascript">
  $(function () {
    $(".pswd-submit").click(function () {
      var password = $("#user-password").val();
      var confirmPassword = $("#user-confirm-password").val();
      if (password != confirmPassword) {
        sweetAlert("Password doesn't match.");
        return false;
      }
        return true;
    });
  });
</script>      
         

